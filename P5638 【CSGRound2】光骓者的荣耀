#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
ll sum[1000002]={};
ll x[1000002];
int main(){
	int n,k;
	scanf("%d %d",&n,&k);
	for(int i=1;i<=n-1;i++){
		scanf("%d",&x[i]);
		sum[i]=sum[i-1]+x[i];
	}
	ll min1=sum[n-1];
	for(int i=k;i<=n-1;i++){
		min1=min(min1,sum[n-1]-(sum[i]-sum[i-k]));
	}
	cout<<min1<<endl;
	return 0;
}
